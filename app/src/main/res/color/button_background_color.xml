<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--When Button is not enabled -->
    <item android:state_enabled="false" android:color="#b6b7b5"/>
    <!--When Button is in pressed state -->
    <item android:state_pressed="true" android:color="#D6F000"/>
    <!--When Button is in selected state -->
    <item android:state_selected="true" android:color="#b6b7b5"/>
    <!--Default Background Color -->
    <item android:color="#D6FF00" android:radius="50dp" />
</selector>